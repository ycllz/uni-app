
.zai-box {
	padding: 0 100rpx;
	position: relative;
}
.zai-logo {
	width: 100%;
	width: 100%;
	height: 250rpx;
	margin-top: 80rpx;
}
.zai-verify {
	margin-top: 30rpx;
	margin-bottom: 30rpx;
}
.zai-title {
	position: absolute;
	top: 0;
	line-height: 360rpx;
	font-size: 68rpx;
	color: #fff;
	text-align: center;
	width: 100%;
	margin-left: -100rpx;
}
.zai-form {
	margin-top: 110rpx;
}
.zai-input {
	background: #e2f5fc;
	margin-top: 30rpx;
	border-radius: 100rpx;
	padding: 20rpx 40rpx;
	font-size: 36rpx;
}
.zai-label .register {
	margin: 40rpx;
}
.input-placeholder,
.zai-input {
	color: #94afce;
}
.zai-label {
	padding: 12rpx 0;
	text-align: center;
	font-size: 30rpx;
	color: #a7b6d0;
}
.zai-btn {
	background: #249873;
	color: #fff;
	border: 0;
	border-radius: 100rpx;
	font-size: 36rpx;
}
.zai-btn:after {
	border: 0;
}

/*按钮点击效果*/
.zai-btn.button-hover {
	-webkit-transform: translate(1rpx, 1rpx);
	    -ms-transform: translate(1rpx, 1rpx);
	        transform: translate(1rpx, 1rpx);
}

